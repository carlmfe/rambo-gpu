# Compute the installation prefix relative to this file.
get_filename_component(_IMPORT_PREFIX "${CMAKE_CURRENT_LIST_FILE}" PATH)
get_filename_component(_IMPORT_PREFIX "${_IMPORT_PREFIX}" PATH)
get_filename_component(_IMPORT_PREFIX "${_IMPORT_PREFIX}" PATH)
if(_IMPORT_PREFIX STREQUAL "/")
  set(_IMPORT_PREFIX "")
endif()

# Import RAMBO library targets
include("${CMAKE_CURRENT_LIST_DIR}/rambo-targets.cmake")

# Message about which variant was used
set(RAMBO_LIBRARY_VARIANT "@RAMBO_VARIANT@")
message(STATUS "RAMBO library found (${RAMBO_LIBRARY_VARIANT} variant)")

if(RAMBO_LIBRARY_VARIANT STREQUAL "kokkos")
    message(STATUS "RAMBO: Using Kokkos backend - make sure Kokkos is available in your environment")
else()
    message(STATUS "RAMBO: Using serial base backend")
endif()
